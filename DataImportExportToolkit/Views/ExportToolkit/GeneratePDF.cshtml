@model Person

@{
	Layout = null;
}

<!DOCTYPE html>
<html>
<head>
	<style>
		.card {
			box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
			transition: 0.3s;
			border-radius: 5px; 
			width : 400px;
			margin-left : 100px;
		}
		img {
			border-radius: 5px 5px 0 0;
		}
		.card:hover {
			box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
		}
	</style>
</head>
<body>
	<div class="card">
		<img src="~/img_avatar.png" alt="Avatar" style="width:100%">
		<div class="container">
			<h4><b>@Model.Name</b></h4>
			<p>@Model.Age</p>
		</div>
	</div>

</body>
</html>
